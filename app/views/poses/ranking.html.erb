<!-- views/poses/ranking.html.erb -->

<div class="p-6">
  <h2 class="text-2xl font-semibold mb-4">ポーズランキング</h2>

  <table class="min-w-full divide-y divide-gray-200">
    <thead>
      <tr>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">順位</th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ポーズ名</th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ブックマーク数</th>
        
      </tr>
    </thead>
    <tbody>
      <% @poses.each.with_index(1) do |pose, index| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= index %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= pose.name %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= pose.bookmarks_count %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= image_tag pose.image.to_s %></td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
