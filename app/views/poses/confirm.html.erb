
 <h2 class="please-check">
  以下の内容を確認してください
</h2>

<div class="confirm-contents">
  <div class="confirm-contents__item">
    <p class="item-heading">ポーズ名：</p>
    <p class="item-content"><%= @pose.name %></p>
  </div>
</div>



<%= form_with(model: @pose, local: true, id: "confirm-pose") do |f| %>
  <%= f.hidden_field :pose_name %>
   <%= f.submit "登録", class: "btn btn-primary" %>
  <%= f.submit "作成", class: "complete-btn" %>
  <%= f.submit "修正", name: :back, class: "back-btn" %>
<% end %>
