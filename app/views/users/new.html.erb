<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @user do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", maxlength: "10" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", maxlength: "300" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", maxlength: "20" %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control", maxlength: "20" %>
        </div>
        
        <%# <%= f.label :favorite_genre, class: "好きな写真のジャンル" %> 
        <%# <%= f.radio_button :favorite_genre, "cute" %> <%# 可愛い %>
        <%# <%= f.radio_button :favorite_genre, "cool" %> <%# かっこいい %> 
        <%# <%= f.radio_button :favorite_genre, "funny" %> <%# 面白い %>
        <%# <%= f.submit "登録", class: "btn btn-primary" %> 
        <%= f.submit "登録", class: "btn btn-primary" %>
      <% end %>
      
      <div class='text-center'>
        <%= link_to t('.to_login_page'), login_path %>
      </div>
    </div>
  </div>
</div>